{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "lib": ["esnext", "dom"],
      "types": ["@types/node", "@types/ziggy-js"],
      "paths": {
        "@/*": ["./resources/ts/*"]
      },
      "outDir": "./public/build/assets"
    },
    "typeRoots": ["./node_modules/@types", "resources/ts/types"],
    "include": [
      "resources/ts/**/*.js",
      "resources/ts/**/*.ts",
      "resources/ts/**/*.d.ts",
      "resources/ts/**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
  }